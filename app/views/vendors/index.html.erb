 <!-- vendor will be able to create, edit, and delete himself -->
<h2>Vendor's opening page</h2>
<%= link_to "New Vendor", "/vendors/new" %>

<% @vendors.each do |vendor| %>
    <form action= "/" method="post">
    <table>
    <tr>
    <th>Vendor Name</th><th>Number of Employees</th><th>Market ID</th><th>Delete</th>
    </tr>
    <tr>
    <td><%= vendor.name %></td><td><%= vendor.no_of_employees %></td>
    <td><%= vendor.market_id %></td><td><input type="radio" onclick='<%= vendor.delete %>'</td>
    </tr>
    </table>
    <input type="Submit" name="Submit" value="Submit">
  </form>
<% end %>
